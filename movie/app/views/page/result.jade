extends ../layout

block content
 .container
    .row 
      .panel.panel-default
          .panel-heading
             h3 #{keyword}
          .panel-body
             if movies && movies.length>0
                each item in movies
                  .col-md-2
                    .thumbnail 
                      a(href="/movie/#{item._id}")
                        img(src="#{item.poster}",alt="#{item.title}")
                      .caption
                        h3.text-center #{item.title}
                        p.text-center: a.btn.btn-primary(href="/movie/#{item._id}",role="button")
                           观看预告片  
      ul.pagination.pagination-lg
        - for(var i=0;i<pagelength;i++){
            - if(currentPage==(i+1)){
               li.active
                 span #{currentPage}
            - }
            - else{
               li
                 a(href="/result?#{query}&page=#{i}") #{i+1}
            - }
        - }  