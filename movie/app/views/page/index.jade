extends ../layout

block content
 .container
    .row 
      each cat in categorys
        .panel.panel-default
           .panel-heading
             h3 
               a(href="/result?cat=#{cat._id}&page=0")
                 #{cat.name}
           .panel-body
             if cat.movies && cat.movies.length>0
                each item in cat.movies
                  .col-md-2.col-sm.2
                    .thumbnail 
                      a(href="/movie/#{item._id}")
                        if item.poster.indexOf('https:') > -1
                          img(src="#{item.poster}",alt="#{item.title}")
                        else
                          img(src="/upload/#{item.poster}",alt="#{item.title}")
                      .caption
                        h3.text-center(style="font-size:13px;color:#000") #{item.title}
                        p.text-center: a.btn.btn-primary(href="/movie/#{item._id}",role="button")
                           观看预告片  