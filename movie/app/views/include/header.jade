.container
  .row
    .page-header.clearfix
       h1 #{title}
       .col-md-4
         a(href="/" style="color:#999") 欢迎来到龙睿小电影网站
       .col-md-8
          form(method="get",action="/result")
            .input-group.col-sm-4.pull-right
               input.form-control(type="text",name="sou")
               span.input-group-btn
                 button.btn.btn-primary(type="submit") 搜索电影 
.navbar.navbar-default.navbar-fixed-bottom
  .container
     .navber-header
       a.navbar-brand(href="/") 重度科幻迷
     if user
       p.navbar-text.navbar-right
         span 欢迎#{user.name}
         span &nbsp;|&nbsp; 
         a.navbar-link(href="/loginout") 退出 
     else	
       p.navbar-text.navbar-right
         a.navbar-link(href="#", data-toggle="modal", data-target="#signupModel") 注册   
         span &nbsp;|&nbsp; 
         a.navbar-link(href="#", data-toggle="modal", data-target="#signinModel") 登录
#signupModel.modal.fade
   .modal-dialog 
     .modal-content
       form(method="POST",action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(name="user[name]",type="text")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(name="user[password]",type="password")
        .modal-footer
           button.btn.btn-default(type="button",data-dismiss="modal") 关闭
           button.btn.btn-success(type="submit") 提交
 #signinModel.modal.fade
   .modal-dialog 
     .modal-content
       form(method="POST",action="/user/signin")
        .modal-header 登录
        .modal-body
          .form-group
            label(for="signinName") 用户名
            input#signinName.form-control(name="user[name]",type="text")
          .form-group
            label(for="signinPassword") 密码
            input#signinPassword.form-control(name="user[password]",type="password")
        .modal-footer
           button.btn.btn-default(type="button",data-dismiss="modal") 关闭
           button.btn.btn-success(type="submit") 提交